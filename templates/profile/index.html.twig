{% extends "base.html.twig" %}

{% block body %}
<h2>Profil</h2>

    {{ form_start(userForm, {'attr': {'class': 'userForm_layout'}}) }}
    
    <div class="row">
    <div class="col-lg-3 col-md-3 col-sm-12 text-center" id="profile_photo-layout">
        <img src="{{ app.user.getPhotoPath() }}" alt="Photo de profil" class="profile_picture">
    </div>
    <div class="col-lg-2 col-md-2 col-sm-6">
        <p class="userForm_field">
            {{ form_label(userForm.username, 'Nom d\'utilisateur', {'label_attr': {'class': 'userForm_label'}}) }}
          </p>
           <p class="userForm_field">
            {{ form_label(userForm.firstname, 'Pr√©nom', {'label_attr': {'class': 'userForm_label'}}) }}
             </p>
            
              <p class="userForm_field">
              {{ form_label(userForm.lastname, 'Nom de famille', {'label_attr': {'class': 'userForm_label'}}) }}
              </p>
          <p class="userForm_field">{{ form_label(userForm.newPassword, 'Nouveau mot de passe', {'label_attr': {'class': 'userForm_label'}}) }}
        </p>
        </div>
        <div class="col-lg-7 col-md-2 col-sm-6">
        <p class="userForm_field">
           {{ form_widget(userForm.username, {'attr': {'class': 'userForm_input'}}) }}
             </p>
            
              <p class="userForm_field">{{ form_widget(userForm.firstname, {'attr': {'class': 'userForm_input'}}) }}
       
        </p>
         <p class="userForm_field">{{ form_widget(userForm.lastname, {'attr': {'class': 'userForm_input'}}) }}
         </p>
     <p class="userForm_field">   {{ form_widget(userForm.newPassword, {'attr': {'class': 'userForm_input'}}) }}
        </p>
        </div>
    </div>
    </div>
    {{ form_end(userForm) }}

<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
{% endblock %}
